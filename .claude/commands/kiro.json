{
  "name": "kiro",
  "description": "Kiro SPECS 工作流管理系统 v4.0 - 优化精简版",
  "version": "4.0.0",
  "commands": [
    {
      "name": "start",
      "description": "启动新的SPECS工作流",
      "usage": "/kiro start <feature_name>",
      "examples": [
        "/kiro start 用户登录功能",
        "/kiro start 商品管理系统"
      ],
      "parameters": [
        {
          "name": "feature_name",
          "type": "string",
          "required": true,
          "description": "要开发的功能名称"
        }
      ]
    },
    {
      "name": "status",
      "description": "查看功能开发状态",
      "usage": "/kiro status [feature_name]",
      "examples": [
        "/kiro status 用户登录功能",
        "/kiro status"
      ],
      "parameters": [
        {
          "name": "feature_name",
          "type": "string",
          "required": false,
          "description": "要查看状态的功能名称，省略时显示当前功能"
        }
      ]
    },
    {
      "name": "list",
      "description": "查看所有功能状态",
      "usage": "/kiro list",
      "examples": ["/kiro list"]
    },
    {
      "name": "phase",
      "description": "阶段管理（需求、设计、任务）",
      "usage": "/kiro phase <req|design|tasks> [feature_name]",
      "examples": [
        "/kiro phase req 用户登录功能",
        "/kiro phase design 商品管理系统",
        "/kiro phase tasks"
      ],
      "parameters": [
        {
          "name": "phase_type",
          "type": "string",
          "required": true,
          "description": "阶段类型：req(需求), design(设计), tasks(任务)"
        },
        {
          "name": "feature_name",
          "type": "string",
          "required": false,
          "description": "功能名称，省略时使用当前功能"
        }
      ]
    },
    {
      "name": "exec",
      "description": "执行指定任务",
      "usage": "/kiro exec <task_id>",
      "examples": [
        "/kiro exec 1.1",
        "/kiro exec 2.3"
      ],
      "parameters": [
        {
          "name": "task_id",
          "type": "string",
          "required": true,
          "description": "要执行的任务编号（如：1.1, 2.3）"
        }
      ]
    },
    {
      "name": "next",
      "description": "执行下一个未完成任务",
      "usage": "/kiro next [feature_name]",
      "examples": [
        "/kiro next",
        "/kiro next 用户登录功能"
      ],
      "parameters": [
        {
          "name": "feature_name",
          "type": "string",
          "required": false,
          "description": "功能名称，省略时使用当前功能"
        }
      ]
    },
    {
      "name": "batch",
      "description": "批量执行任务",
      "usage": "/kiro batch <task_range> [feature_name]",
      "examples": [
        "/kiro batch 1.1-1.3",
        "/kiro batch 2.1,2.3,2.5 用户登录功能"
      ],
      "parameters": [
        {
          "name": "task_range",
          "type": "string",
          "required": true,
          "description": "任务范围（如：1.1-1.3 或 1.1,1.3,1.5）"
        },
        {
          "name": "feature_name",
          "type": "string",
          "required": false,
          "description": "功能名称，省略时使用当前功能"
        }
      ]
    },
    {
      "name": "change",
      "description": "智能变更处理",
      "usage": "/kiro change <feature_name> <description>",
      "examples": [
        "/kiro change 用户登录功能 \"改用邮箱登录\"",
        "/kiro change 商品管理系统 \"增加商品分类功能\""
      ],
      "parameters": [
        {
          "name": "feature_name",
          "type": "string",
          "required": true,
          "description": "要变更的功能名称"
        },
        {
          "name": "description",
          "type": "string",
          "required": true,
          "description": "变更的具体描述"
        }
      ]
    },
    {
      "name": "undo",
      "description": "撤销最近变更",
      "usage": "/kiro undo [feature_name]",
      "examples": [
        "/kiro undo 用户登录功能",
        "/kiro undo"
      ],
      "parameters": [
        {
          "name": "feature_name",
          "type": "string",
          "required": false,
          "description": "要撤销变更的功能名称，省略时使用当前功能"
        }
      ]
    },
    {
      "name": "info",
      "description": "项目信息管理",
      "usage": "/kiro info [save <info> | show]",
      "examples": [
        "/kiro info save \"mysql -uroot -ppass123 -h10.0.0.7，React前端，Node.js后端\"",
        "/kiro info show",
        "/kiro info"
      ],
      "parameters": [
        {
          "name": "action",
          "type": "string",
          "required": false,
          "description": "操作类型：save 保存信息，show 显示信息，省略时显示信息"
        },
        {
          "name": "content",
          "type": "string",
          "required": false,
          "description": "当action为save时的项目信息内容"
        }
      ]
    },
    {
      "name": "resume",
      "description": "智能恢复工作流或任务",
      "usage": "/kiro resume [feature_name]",
      "examples": [
        "/kiro resume",
        "/kiro resume 用户登录功能"
      ],
      "parameters": [
        {
          "name": "feature_name",
          "type": "string",
          "required": false,
          "description": "功能名称，省略时自动检测中断的任务"
        }
      ]
    },
    {
      "name": "pause",
      "description": "暂停功能开发",
      "usage": "/kiro pause [feature_name]",
      "examples": [
        "/kiro pause 用户登录功能",
        "/kiro pause"
      ],
      "parameters": [
        {
          "name": "feature_name",
          "type": "string",
          "required": false,
          "description": "要暂停的功能名称，省略时暂停当前功能"
        }
      ]
    },
    {
      "name": "where",
      "description": "查看当前任务进度和位置",
      "usage": "/kiro where [feature_name]",
      "examples": [
        "/kiro where",
        "/kiro where 用户登录功能"
      ],
      "parameters": [
        {
          "name": "feature_name",
          "type": "string",
          "required": false,
          "description": "功能名称，省略时显示当前功能进度"
        }
      ]
    },
    {
      "name": "save-progress",
      "description": "手动保存任务进度",
      "usage": "/kiro save-progress [feature_name]",
      "examples": [
        "/kiro save-progress",
        "/kiro save-progress 用户登录功能"
      ],
      "parameters": [
        {
          "name": "feature_name",
          "type": "string",
          "required": false,
          "description": "功能名称，省略时保存当前功能进度"
        }
      ]
    },
    {
      "name": "sync",
      "description": "同步文档变更",
      "usage": "/kiro sync <feature_name> [scope]",
      "examples": [
        "/kiro sync 用户登录功能",
        "/kiro sync 商品管理系统 all"
      ],
      "parameters": [
        {
          "name": "feature_name",
          "type": "string",
          "required": true,
          "description": "要同步的功能名称"
        },
        {
          "name": "scope",
          "type": "string",
          "required": false,
          "description": "同步范围：all(全部), req(需求), design(设计), tasks(任务)"
        }
      ]
    },
    {
      "name": "rollback",
      "description": "回滚到之前版本",
      "usage": "/kiro rollback <feature_name> [phase]",
      "examples": [
        "/kiro rollback 用户登录功能 design",
        "/kiro rollback 商品管理系统"
      ],
      "parameters": [
        {
          "name": "feature_name",
          "type": "string",
          "required": true,
          "description": "要回滚的功能名称"
        },
        {
          "name": "phase",
          "type": "string",
          "required": false,
          "description": "回滚到的阶段：req, design, tasks, last-sync"
        }
      ]
    },
    {
      "name": "help",
      "description": "显示命令帮助信息",
      "usage": "/kiro help [command]",
      "examples": [
        "/kiro help",
        "/kiro help change"
      ],
      "parameters": [
        {
          "name": "command",
          "type": "string",
          "required": false,
          "description": "要查看帮助的具体命令名称"
        }
      ]
    }
  ]
}